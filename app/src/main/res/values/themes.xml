<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartPortfolio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.SmartPortfolio.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/bg_secondary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/color_primary</item>
        <item name="postSplashScreenTheme">@style/Theme.SmartPortfolio</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
    </style>

    <style name="Theme.SmartPortfolio.Toolbar" parent="Theme.SmartPortfolio">
        <item name="android:textColor">@color/text_primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.SmartPortfolio.ViewGroup" parent="Theme.SmartPortfolio">
        <item name="android:background">@color/bg_secondary</item>
    </style>

    <style name="Theme.SmartPortfolio.Title" parent="Theme.SmartPortfolio">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.SmartPortfolio.ImageButton" parent="Theme.SmartPortfolio">
        <item name="android:background">@drawable/bg_image_button</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="background">@drawable/bg_image_button</item>
        <item name="tint">@color/text_primary</item>
    </style>

    <style name="Theme.SmartPortfolio.TextButton" parent="Theme.SmartPortfolio">
        <item name="android:background">@drawable/bg_text_button</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/color_primary_variant</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">4dp</item>
        <item name="background">@drawable/bg_text_button</item>
        <item name="tint">@color/text_primary</item>
    </style>

</resources>